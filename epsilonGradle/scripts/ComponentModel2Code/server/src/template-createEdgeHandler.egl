    public Create[%=createEdgeHandler.elementName%]EdgeHandler() {
        super([%=_metamodelName.firstToUpperCase()%]ModelTypes.[%=createEdgeHandler.elementName.toUpperCase()%]);
    }

    @Override
    public String getLabel() { return "[%=createEdgeHandler.elementName%]"; }

    @Override
    public Optional<Command> createCommand(CreateEdgeOperation operation) {
        if (!constraintSatisfied()) return Optional.of(new CompoundCommand());
    
        [%=createEdgeHandler.elementName%] new[%=createEdgeHandler.elementName%] = [%=_metamodelName.firstToUpperCase()%]Factory.eINSTANCE.create[%=createEdgeHandler.elementName%]();
        //newArc.setId(UUID.randomUUID().toString());
        [%if (isStorable(createEdgeHandler.elementName)){%]
        setInitialName(newTransition);
        [%}%]

        String sourceId = operation.getSourceElementId();
        String targetId = operation.getTargetElementId();

        [%=getSourceType(createEdgeHandler.elementName)%] source = modelState.getIndex().getEObject(sourceId, [%=getSourceType(createEdgeHandler.elementName)%].class).orElseThrow();
        [%=getTargetType(createEdgeHandler.elementName)%] target = modelState.getIndex().getEObject(targetId, [%=getTargetType(createEdgeHandler.elementName)%].class).orElseThrow();

        return Optional.of(create[%=createEdgeHandler.elementName%](new[%=createEdgeHandler.elementName%], source, target));
    }

	[%if (isStorable(createEdgeHandler.elementName)){%]
    protected void setInitialName(final [%=createEdgeHandler.elementName%] [%=createEdgeHandler.elementName.firstToLowerCase()%]) {
        Function<Integer, String> nameProvider = i -> "New" + [%=createEdgeHandler.elementName.firstToLowerCase()%].eClass().getName() + i;
        int edgeCounter = modelState.getIndex().getCounter([%=_metamodelName.firstToUpperCase()%]Package.Literals.[%=createEdgeHandler.elementName.charAt(0)%][%for (i in Sequence{1..createEdgeHandler.elementName.length()-1}){%][%if(createEdgeHandler.elementName.substring(i,i+1).matches("[A-Z]")){%]_[%}%][%=createEdgeHandler.elementName.substring(i,i+1).toUpperCase()%][%}%], nameProvider);
        [%=createEdgeHandler.elementName.firstToLowerCase()%].set[%=getIdAttributeRecursive(createEdgeHandler.elementName).firstToUpperCase()%](nameProvider.apply(edgeCounter));
    }
    [%}%]

    protected Command create[%=createEdgeHandler.elementName%]([%=createEdgeHandler.elementName%] new[%=createEdgeHandler.elementName%], [%=getSourceType(createEdgeHandler.elementName)%] source, [%=getTargetType(createEdgeHandler.elementName)%] target) {
    	[%=_root%] [%=_root.firstToLowerCase()%] = modelState.getSemanticModel([%=_root%].class).orElseThrow();
        EditingDomain editingDomain = modelState.getEditingDomain();

        //explicitly set the arcs to the nodes (source / target) so the operation is added to the command stack
        // and can be undone. Otherwise, the reference would not be removed from the nodes.

        Command [%=createEdgeHandler.elementName.firstToLowerCase()%]Command = AddCommand.create(editingDomain, [%=_root.firstToLowerCase()%],
            [%=_metamodelName.firstToUpperCase()%]Package.Literals.[%=_root.charAt(0)%][%for (i in Sequence{1.._root.length()-1}){%][%if(_root.substring(i,i+1).matches("[A-Z]")){%]_[%}%][%=_root.substring(i,i+1).toUpperCase()%][%}%]__[%=getReferenceName(createEdgeHandler.elementName, _root).toUpperCase()%], new[%=createEdgeHandler.elementName%]);

        Command setSource = SetCommand.create(editingDomain, new[%=createEdgeHandler.elementName%],
        	[%=_metamodelName.firstToUpperCase()%]Package.Literals.[%=createEdgeHandler.elementName.toUpperCase()%]__[%=getSourceReference(createEdgeHandler.elementName).toUpperCase()%], source);

        Command setTarget = SetCommand.create(editingDomain, new[%=createEdgeHandler.elementName%],
        	[%=_metamodelName.firstToUpperCase()%]Package.Literals.[%=createEdgeHandler.elementName.toUpperCase()%]__[%=getTargetReference(createEdgeHandler.elementName).toUpperCase()%], target);

        CompoundCommand compoundCommand = new CompoundCommand();

        compoundCommand.append([%=createEdgeHandler.elementName.firstToLowerCase()%]Command);
        compoundCommand.append(setSource);
        compoundCommand.append(setTarget);

        return compoundCommand;
    }
    
    protected boolean constraintSatisfied() {
 	   // USER INSERTS CONSTRAINT FOR EDGE CREATION HERE
 	   
 	   return true;
    }

